    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "hygen": "^6.0.4",
    "jest": "^26.0.0",
    "jest-config": "^26.0.0",
    "lerna": "^3.20.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
